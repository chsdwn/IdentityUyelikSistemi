@model Identity.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Member";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h1>Kullanıcı Bilgileri</h1>

<div>
    <ul>
        <li>Kullanıcı Adı: @Model.UserName</li>
        <li>Email: @Model.Email</li>
        <li>Telefon Numarası: @Model.PhoneNumber</li>
        <li>Şehir: @Model.City</li>
        <li>Cinsiyet: @Model.Gender</li>
        <li>Doğum Tarihi: @Model.BirthDate?.ToString("d")</li>
    </ul>
</div>